IRRAKIDS_STORE_DOMAIN=yourstore.myshopify.com
SHOPIFY_PASSWORD=shpat_or_private_app_password
SHOPIFY_API_KEY=
SHOPIFY_API_VERSION=2025-01

# Database / auth
DATABASE_URL=sqlite+aiosqlite:///./local.db
JWT_SECRET=change_me
JWT_EXPIRES_MINUTES=720

# Optional per-store overrides (set if different from defaults above)
IRRAKIDS_SHOPIFY_PASSWORD=
IRRAKIDS_SHOPIFY_API_KEY=

# Second store (Irranova)
IRRANOVA_STORE_DOMAIN=your-second-store.myshopify.com
IRRANOVA_SHOPIFY_PASSWORD=
IRRANOVA_SHOPIFY_API_KEY=

# Webhook secrets (HMAC verification)
SHOPIFY_WEBHOOK_SECRET=
IRRAKIDS_SHOPIFY_WEBHOOK_SECRET=
IRRANOVA_SHOPIFY_WEBHOOK_SECRET=

# Order Tagger
AUTO_TAGGING_ENABLED=0
AUTO_TAGGING_ENABLED_IRRAKIDS=
AUTO_TAGGING_ENABLED_IRRANOVA=
GOOGLE_MAPS_API_KEY=

# Optional per-store zones file paths (if omitted, uses backend/app/zones.geojson)
IRRAKIDS_ZONES_FILE=
IRRANOVA_ZONES_FILE=

# Optional address alias map (JSON: { "alias": "canonical" })
ADDRESS_ALIAS_FILE=
# Optional geocode bounds to bias results (SW/NE lat,lng)
GEO_BOUNDS_SW=-13.5,20.5
GEO_BOUNDS_NE=-0.5,36.1

